# OPD-EMR Production Environment Variables
# Copy this file to .env.local for local production testing
# Set these variables in your deployment platform (Vercel, Railway, etc.)

# Application Configuration
NODE_ENV=production
REACT_APP_NAME=OPD-EMR
REACT_APP_VERSION=1.0.0

# API Configuration
# Update this URL to match your deployed application
REACT_APP_API_BASE_URL=https://your-app-name.vercel.app

# CORS Configuration
# Update this URL to match your deployed application
CORS_ORIGIN=https://your-app-name.vercel.app

# Security
# IMPORTANT: Change this to a secure random string in production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Database Configuration
# For SQLite (default - data resets on Vercel)
DATABASE_URL=file:./opd-emr.db

# For PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@host:port/database

# File Upload Configuration
MAX_FILE_SIZE=10mb

# Server Configuration
PORT=3001
HOST=0.0.0.0

# Optional: Custom Domain
# DOMAIN=your-custom-domain.com
